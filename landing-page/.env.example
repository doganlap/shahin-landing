# Multi-Modal AI Service Configuration
# Copy this to .env.local and fill in your API keys

# Local Backend Service
VITE_API_URL=http://localhost:3001

# Azure OpenAI Configuration
VITE_AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com
VITE_AZURE_OPENAI_KEY=your-azure-openai-api-key

# Azure Cognitive Services
VITE_AZURE_COMPUTER_VISION_ENDPOINT=https://your-vision-service.cognitiveservices.azure.com
VITE_AZURE_SPEECH_ENDPOINT=https://your-speech-service.cognitiveservices.azure.com
VITE_AZURE_COGNITIVE_KEY=your-azure-cognitive-services-key

# OpenAI Public API
VITE_OPENAI_API_KEY=your-openai-api-key

# Hugging Face Inference API
VITE_HUGGINGFACE_API_KEY=your-huggingface-api-key

# Primary AI Service URL (if you have a custom AI service)
VITE_AI_API_URL=https://your-custom-ai-service.com